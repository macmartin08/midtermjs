form(action=(resource ? `/resources/update` : "/resources"), method="POST")
  if resource
    input(type="hidden", name="id", value=resource.id)

  .form-group
    label Aliase
    input.form-control(name="resource[alise]", required)

  .form-group
    label Full Name
    input.form-control(name="resource[fullname]")
      
  .form-group
    label Affiliation
    input.form-control(
    name="resource[affiliation]")

  .form-group
    label Meta Type
    select.form-control(name="resource[mettype]", required)
      option(value="SuperHero") SuperHero
      option(value="Villain") Villain
      option(value="Antihero") Antihero


  .form-group
    button.btn.btn-dark(type="submit") Submit