form(action=(resource ? `/resources/update` : "/resources"), method="POST")
  if resource
    input(type="hidden", name="id", value=resource.id)

  .form-group
    label Aliase
    input.form-control(name="resource[aliase]", required, value=(resource ? resource.title : null))

  .form-group
    label Full Name
    input.form-control(name="resource[fullname]")
      
  .form-group
    label Affiliation
    input.form-control(
    name="resource[affiliation]")

  .form-group
    label Meta Type
    select.form-control(name="[status]", required)
      each status in ['Superhero', 'Villain','Antihero ']
        option(value=status, selected=(blog && blog.status === status ? true : false))= status.toLowerCase()

  .form-group
    button.btn.btn-dark(type="submit") Submit